<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://nant.sf.net/schemas/nant.xsd" name="CI Factory Packager" default="Packager.Create">

  <target name="Packager.Create">
    
    <zip zipfile="Zip\CI Factory.zip" includeemptydirs="true">
      <fileset basedir="..\..\Production\CI Installer" >
        <include name="Install Scripts\**\*"/>
      </fileset>
      
      <fileset basedir="..\..\Production\Foundation">
        <include name="Default\**\*"/>
      </fileset>
      <fileset prefix="Default\Build\nAnt\bin" >
        <include name="..\..\Production\Common\Common.Tasks\bin\Common.Tasks.dll" />
      </fileset>

      <fileset prefix="nAnt" basedir="..\..\Production\Foundation\Default\Build\nAnt">
        <include name="**\*"/>
      </fileset>
      <fileset prefix="nAnt\bin" >
        <include name="..\..\Production\Common\VSS.Tasks\bin\VSS.Tasks.dll" />  
      </fileset>
      <fileset prefix="nAnt\bin" >
        <include name="..\..\Production\Common\Common.Tasks\bin\Common.Tasks.dll" />
      </fileset>
      

      <fileset prefix="Packages" basedir="..\..\Production\Packages\Deployment\Package">
        <include name="**\*"/>
      </fileset>
      <fileset prefix="Packages" basedir="..\..\Production\Packages\DotNetUnitTest\Package">
        <include name="**\*"/>
      </fileset>
      <fileset prefix="Packages" basedir="..\..\Production\Packages\InstallShield\Package">
        <include name="**\*"/>
      </fileset>
      <fileset prefix="Packages" basedir="..\..\Production\Packages\SourceModificationReport\Package">
        <include name="**\*"/>
      </fileset>
      <fileset prefix="Packages" basedir="..\..\Production\Packages\Tracker\Package">
        <include name="**\*"/>
      </fileset>
      <fileset prefix="Packages" basedir="..\..\Production\Packages\Versioning\Package">
        <include name="**\*"/>
      </fileset>
      <fileset prefix="Packages" basedir="..\..\Production\Packages\VisualSourceSafe\Package">
        <include name="**\*"/>
      </fileset>
      <fileset prefix="Packages" basedir="..\..\Production\Packages\VS.NETCompile\Package">
        <include name="**\*"/>
      </fileset>
    </zip>
    
  </target>
  
</project>